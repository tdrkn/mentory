# ============================================
# Mentory Environment Configuration (DEV)
# ============================================
# Copy to .env: cp .env.example .env

# ============================================
# Application
# ============================================
NODE_ENV=development

# ============================================
# Database (PostgreSQL)
# ============================================
DB_USER=mentory
DB_PASSWORD=mentory
DB_NAME=mentory
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:5432/${DB_NAME}

# ============================================
# Redis
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ============================================
# API Configuration
# ============================================
API_PORT=4000
API_HOST=0.0.0.0
# CORS is auto-configured (reflects any origin in dev mode)

# JWT
JWT_SECRET=dev-secret-change-in-production-min-32-chars!!!
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
PASSWORD_RESET_EXPIRES_IN=30m

# ============================================
# Web Configuration
# ============================================
WEB_PORT=3000
# Production domain + HTTPS (used by Caddy)
DOMAIN=
TLS_EMAIL=

# Optional explicit public URLs (recommended in production)
PUBLIC_APP_URL=
PUBLIC_API_URL=
PUBLIC_MINIO_URL=

# ============================================
# MinIO (S3-compatible Object Storage)
# ============================================
MINIO_ROOT_USER=mentory
MINIO_ROOT_PASSWORD=mentory123
MINIO_IMAGE=quay.io/minio/minio:RELEASE.2025-02-28T09-55-16Z
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ENDPOINT=minio
MINIO_BUCKET=mentory-uploads
# PUBLIC_MINIO_URL is auto-detected from browser location

# ============================================
# Admin Panel (AdminJS)
# ============================================
ADMIN_EMAIL=admin@mentory.local
ADMIN_PASSWORD=change-me-admin
ADMIN_COOKIE_SECRET=change-me-cookie-secret-min-32-chars

# ============================================
# Email (MailHog for DEV)
# ============================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false
EMAIL_FROM=noreply@mentory.local

# MailHog UI: http://localhost:8025
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# ============================================
# Video Calls (configure for your provider)
# ============================================
# VIDEO_PROVIDER=daily
# DAILY_API_KEY=
# DAILY_DOMAIN=

# Or LiveKit
# LIVEKIT_API_KEY=
# LIVEKIT_API_SECRET=
# LIVEKIT_URL=

# ============================================
# Payments (Stripe)
# ============================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# OAuth (optional)
# ============================================
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=

# ============================================
# Logging & Monitoring
# ============================================
# Log level: verbose, debug, log, warn, error, fatal
LOG_LEVEL=debug

# Enable structured JSON logs (recommended for production)
ENABLE_STRUCTURED_LOGS=false

# Enable request logging middleware
ENABLE_REQUEST_LOGGING=true

# Sentry (error tracking)
ENABLE_SENTRY=false
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
