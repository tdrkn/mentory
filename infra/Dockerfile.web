# ============================================
# Mentory Web Dockerfile (SvelteKit)
# ============================================

FROM node:22-alpine AS base

RUN corepack enable && corepack prepare pnpm@9.15.0 --activate
WORKDIR /app

LABEL org.opencontainers.image.source="https://github.com/mentory/mentory"
LABEL org.opencontainers.image.description="Mentory Web (SvelteKit)"

FROM base AS deps
RUN apk add --no-cache libc6-compat
COPY pnpm-lock.yaml pnpm-workspace.yaml package.json ./
COPY apps/web/package.json ./apps/web/
COPY packages/shared/package.json ./packages/shared/
RUN --mount=type=cache,id=pnpm,target=/root/.local/share/pnpm/store \
    pnpm install --frozen-lockfile

FROM base AS development
RUN apk add --no-cache libc6-compat
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
COPY --from=deps /app/packages/shared/node_modules ./packages/shared/node_modules
COPY . .
ENV NODE_ENV=development
EXPOSE 3000
CMD ["pnpm", "dev:web"]

FROM base AS builder
RUN apk add --no-cache libc6-compat
ARG PUBLIC_API_URL
ARG PUBLIC_APP_URL
ARG PUBLIC_MINIO_URL
ENV PUBLIC_API_URL=${PUBLIC_API_URL}
ENV PUBLIC_APP_URL=${PUBLIC_APP_URL}
ENV PUBLIC_MINIO_URL=${PUBLIC_MINIO_URL}
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
COPY --from=deps /app/packages/shared/node_modules ./packages/shared/node_modules
COPY . .
RUN pnpm --filter @mentory/shared build
RUN pnpm --filter @mentory/web build

FROM node:22-alpine AS production
RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 svelte
WORKDIR /app
ENV NODE_ENV=production
ENV PORT=3000
ENV HOST=0.0.0.0

COPY --from=builder --chown=svelte:nodejs /app/apps/web/build ./build
COPY --from=builder --chown=svelte:nodejs /app/apps/web/package.json ./
COPY --from=builder --chown=svelte:nodejs /app/node_modules ./node_modules

USER svelte
EXPOSE 3000

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD wget --no-verbose --tries=1 --spider http://localhost:3000/ || exit 1

CMD ["node", "build"]
